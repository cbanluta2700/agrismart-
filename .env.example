# Frontend Environment Configuration
# API and Backend
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Security
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/agrismart?schema=public"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_AI_MODERATION=true

# Third Party Services
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# OpenAI API (for AI moderation)
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_ORGANIZATION=your-openai-org-id

# Vercel AI SDK Configuration
AI_MODERATION_SENSITIVITY=0.7
AI_FALLBACK_TO_BASIC=true
AI_MAX_TOKENS=1000
AI_CACHE_DURATION=3600

# Cache and Performance
NEXT_PUBLIC_CACHE_MAX_AGE=3600
SWR_CACHE_AGE=3600

# Environment
NODE_ENV=development

# Vercel SDK Configuration
VERCEL_API_TOKEN=your-vercel-api-token
VERCEL_TEAM_ID=your-vercel-team-id
NEXT_PUBLIC_VERCEL_URL=https://your-project.vercel.app
ADMIN_API_KEY=your-admin-api-key-for-protected-endpoints

# Vercel Edge Config
EDGE_CONFIG=your-edge-config-connection-string

# Vercel KV Store (Redis compatible)
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# AI Moderation
AI_MODERATION_API_KEY=your-ai-moderation-api-key
AI_MODERATION_ENDPOINT=https://api.openai.com/v1/moderations
AI_MODERATION_THRESHOLD=0.8

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=30

# Moderation Token Settings
MODERATION_TOKEN_DEFAULT_EXPIRY_HOURS=24
MODERATION_TOKEN_MAX_USES=5